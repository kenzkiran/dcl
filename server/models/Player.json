{
  "name": "Player",
  "strict": true,
  "properties": {
    "id": {
      "type": "number",
      "id": true,
      "generated": true,
      "doc": "Unique Player Id"
    },
    "firstName": {
      "type": "string",
      "required": true
    },
    "middleName": {
      "type": "string",
      "required": false
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true,
      "default": "123-456-7890",
      "doc": "Phone number"
    },
    "street_address_1": {
      "type": "string",
      "required": true,
      "default": "64 coverdrive",
      "doc": "Street Address 1"
    },
    "street_address_2": {
      "type": "string",
      "required": false,
      "default": "",
      "doc": "Street Address 2"
    },
    "city": {
      "type": "string",
      "required": true,
      "default": "london",
      "doc": "City"
    },
    "state": {
      "type": "string",
      "required": true,
      "default": "TX",
      "doc": "state"
    },
    "zipcode": {
      "type": "string",
      "required": true,
      "default": "00000",
      "min": 5,
      "max": 5
    },
    "battingStyle": {
      "type": "string",
      "required": true,
      "default": "Right Handed",
      "doc": "Batting style of the player"
    },
    "bowlingStyle": {
      "type": "string",
      "default": "Right Arm Medium-Fast",
      "required": false,
      "doc": "Bowling style of the player"
    },
    "certified": {
      "type": "boolean",
      "required": false,
      "default": false,
      "doc": "Is the player a certified umpire"
    },
    "approved": {
      "type": "boolean",
      "default": false,
      "required": false,
      "doc": "Is this player DCL approved"
    },
    "certLevel": {
      "type": "number",
      "default": 1,
      "doc": "Certification Level - Level I or II"
    },
    "photo": {
      "type": "string",
      "default": "/path/to/default/photo/url/photo.png",
      "doc": "URL for the uploaded photo"
    },
    "created": {
      "type": "Date",
      "doc": "Creation time of this player"
    },
    "active": {
      "type": "boolean",
      "default": true,
      "doc": "Is Player Active?"
    },
    "designation": {
      "type": "string",
      "default": "Player",
      "required": false,
      "doc": "Designation of the player"
    },
    "isWicketKeeper": {
      "type": "boolean",
      "default": false,
      "doc": "Is Player WicketKeeper?"
    }
  },
  "relations": {
    "owner": {
      "model": "User",
      "type": "belongsTo",
      "foreignKey": "userId"
    },
    "teams": {
      "model": "Team",
      "type": "hasAndBelongsToMany",
      "foreignKey": "teamId"
    },
    "batting": {
      "model": "BattingScore",
      "type": "hasMany",
      "foreignKey": "batsmanId"
    },
    "bowling": {
      "model": "BowlingScore",
      "type": "hasMany",
      "foreignKey": "bowlerId"
    }
  },
  "options": {
    "strict": true
  },
  "hidden": [
    "created",
    "phone",
    "street_address_1",
    "street_address_2",
    "city",
    "zipcode",
    "state"
  ],
  "acls": [
